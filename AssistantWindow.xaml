<Window x:Class="WindowsLiveCaptionsReader.AssistantWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Exam Assistant" Height="600" Width="700"
    WindowStyle="None" AllowsTransparency="True" Background="Transparent"
    Topmost="True" ResizeMode="CanResizeWithGrip"
    WindowStartupLocation="CenterScreen"
    MouseDown="Window_MouseDown">

    <Window.Resources>
        <Style x:Key="CleanButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#33FFFFFF" />
            <Setter Property="Foreground" Value="White" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Padding" Value="10,5" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}"
                            CornerRadius="4">
                            <ContentPresenter HorizontalAlignment="Center"
                                VerticalAlignment="Center" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#55FFFFFF" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border CornerRadius="8" Background="#F5101015" BorderBrush="#44FFD700" BorderThickness="1">
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" /> <!-- Header -->
                <RowDefinition Height="Auto" /> <!-- Detected Question -->
                <RowDefinition Height="*" />    <!-- Suggestions -->
                <RowDefinition Height="Auto" /> <!-- Footer -->
            </Grid.RowDefinitions>

            <!-- 1. Header -->
            <Grid Grid.Row="0" Margin="0,0,0,15">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="&#xE896;" FontFamily="Segoe MDL2 Assets" Foreground="#FFD700"
                        FontSize="16" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBlock Text="Exam Assistant" Foreground="White" FontWeight="Bold"
                        FontSize="14" />
                </StackPanel>
                <Button Content="&#xE711;" FontFamily="Segoe MDL2 Assets" Click="Close_Click"
                    HorizontalAlignment="Right" Background="Transparent" Foreground="#AAA"
                    BorderThickness="0" />
            </Grid>

            <!-- 2. Context / Question -->
            <StackPanel Grid.Row="1" Margin="0,0,0,10">
                <TextBlock Text="Context / Last Question:" Foreground="#88FFFFFF" FontSize="10"
                    Margin="0,0,0,2" />
                <Border Background="#22FFFFFF" CornerRadius="4" Padding="8">
                    <TextBlock x:Name="ContextText" Text="Waiting for context..." Foreground="White"
                        TextWrapping="Wrap" FontStyle="Italic" MaxHeight="60"
                        TextTrimming="CharacterEllipsis" />
                </Border>
            </StackPanel>

            <!-- 3. Suggestions List -->
            <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="Suggested Responses:" Foreground="#FFD700" FontSize="11"
                        Margin="0,5,0,5" FontWeight="SemiBold" />
                    <TextBlock x:Name="SuggestionsContent"
                        Text="Press 'Analyze' to generate responses based on conversation history."
                        Foreground="#DDD" TextWrapping="Wrap" FontSize="13" LineHeight="20" />
                </StackPanel>
            </ScrollViewer>

            <!-- 4. Footer Actions -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right"
                Margin="0,10,0,0">
                <TextBlock x:Name="StatusText" Text="" Foreground="#AAA" FontSize="10"
                    VerticalAlignment="Center" Margin="0,0,10,0" />
                <Button Content="Refresh Analysis" Click="Refresh_Click"
                    Style="{StaticResource CleanButtonStyle}" />
            </StackPanel>
        </Grid>
    </Border>
</Window>